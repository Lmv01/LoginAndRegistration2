<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_reply_response"
        android:layout_width="264dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_reply_upvote"
        android:layout_width="32dp"
        android:layout_height="27dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/textView_reply_response"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <ImageButton
        android:id="@+id/imageButton_reply_downvote"
        android:layout_width="33dp"
        android:layout_height="26dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView_reply_response"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_reply_upvote"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:id="@+id/textView_reply_upvoteCount"
        android:layout_width="42dp"
        android:layout_height="15dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/textView_reply_response"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_reply_downvoteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/textView_reply_upvoteCount"
        tools:layout_editor_absoluteX="280dp" />
</androidx.constraintlayout.widget.ConstraintLayout>